# Application Configuration
APP_NAME=football-analytics-serverless
APP_VERSION=1.0.0
ENVIRONMENT=development
DEBUG=True

# AWS Configuration
AWS_REGION=us-east-1
AWS_ACCOUNT_ID=your-account-id

# Kinesis Configuration
KINESIS_STREAM_NAME=football-analytics-stream
KINESIS_SHARD_COUNT=4
KINESIS_RETENTION_HOURS=24

# DynamoDB Configuration
DYNAMODB_TABLE_NAME=football-analytics
DYNAMODB_READ_CAPACITY=5
DYNAMODB_WRITE_CAPACITY=5

# S3 Configuration
S3_BUCKET_NAME=football-analytics-data
S3_PREFIX=matches

# Lambda Configuration
LAMBDA_MEMORY_SIZE=512
LAMBDA_TIMEOUT=30
LAMBDA_CONCURRENT_EXECUTIONS=100

# API Gateway Configuration
API_GATEWAY_STAGE=dev
WEBSOCKET_ENDPOINT=
API_GATEWAY_THROTTLE_BURST=5000
API_GATEWAY_THROTTLE_RATE=10000

# Processing Configuration
BATCH_SIZE=100
PROCESSING_WINDOW_SECONDS=5
MAX_RETRIES=3
RETRY_BACKOFF_SECONDS=1

# Performance Targets
TARGET_LATENCY_MS=500
TARGET_THROUGHPUT=10000

# Monitoring Configuration
ENABLE_XRAY=True
ENABLE_DETAILED_METRICS=True
LOG_LEVEL=INFO

# Cost Management
COST_ALERT_THRESHOLD_USD=100.0
ENABLE_COST_TRACKING=True

# Security
ENABLE_ENCRYPTION=True
KMS_KEY_ID=

# StatsBomb Configuration
STATSBOMB_DATA_DIR=data/raw/statsbomb

# Testing Configuration
SYNTHETIC_DATA_ENABLED=True
TEST_MATCH_FREQUENCY_HZ=25

# LocalStack (for local development)
USE_LOCALSTACK=False
LOCALSTACK_ENDPOINT=http://localhost:4566
